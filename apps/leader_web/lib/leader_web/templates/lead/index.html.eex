<h1>Listing Leads</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>First name</th>
      <th>Last name</th>
      <th>state</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for lead <- @leads do %>
    <tr>
      <td onclick="window.location=' <%= Routes.lead_path(@conn, :edit, lead) %>';"><%= lead.company %></td>
      <td onclick="window.location=' <%= Routes.lead_path(@conn, :edit, lead) %>';"><%= lead.first_name %></td>
      <td onclick="window.location=' <%= Routes.lead_path(@conn, :edit, lead) %>';"><%= lead.last_name %></td>
      <td onclick="window.location=' <%= Routes.lead_path(@conn, :edit, lead) %>';"><%= lead.state %></td>
      <td>

        <span><%= link "Delete", to: Routes.lead_path(@conn, :delete, lead), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
  <div class="row justify-content-center">
     <div class="col justify-content-center">
<%= link "New Lead", to: Routes.lead_path(@conn, :new) %>
</div>
 <div class="col justify-content-center">
<%= link "Save for day", to: Routes.lead_path(@conn, :create_emails) %>
</div>
 <div class="col justify-content-center">
<%= link "Export excel", to: Routes.lead_path(@conn, :export) %>
</div>
</div>
